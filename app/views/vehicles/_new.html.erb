<div class="modal">
  <%= simple_form_for([@intervention, @endowment, 'mobile_intervention',
      @vehicle], remote: true, html: { data: { target: 'new_vehicle', error: 'modal',
      modal: true, callback: "highlightItem('new_vehicle', 'vehicles_list',
      false);", replace: true } } ) do |f| %>
    <div class="modal-header">
      <button class="close" data-dismiss="modal">&times;</button>
      <h2><%= @title %></h2>
    </div>
    <div class="modal-body">
      <%= render partial: 'form', locals: { f: f } %>
    </div>
    <div class="modal-footer">
      <%= f.button :submit, t('view.vehicles.new'), class: 'btn-primary' %>
    </div>
<% end %>
</div>
