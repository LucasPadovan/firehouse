<%= simple_form_for(@sco) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :full_name %>
    <%= f.input :current %>
  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
