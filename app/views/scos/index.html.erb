<% if @scos.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th></th>
            <th><%= Sco.human_attribute_name 'full_name' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @scos.each do |sco| %>
            <%= render partial: 'sco', locals: { sco: sco } %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@scos) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.scos.new', default: :'label.new'),
    new_sco_path, class: 'btn btn-primary'
  ) if can? :create, Sco %>
</div>
