<% if @endowments.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Endowment.human_attribute_name 'number' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @endowments.each do |endowment| %>
            <tr>
              <td><%= endowment.number %></td>
              <td><%= link_to_show endowment %></td>
              <td><%= link_to_edit edit_endowment_path(endowment) if can? :update, endowment %></td>
              <td><%= link_to_destroy endowment if can? :destroy, endowment %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@endowments) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.endowments.new', default: :'label.new'),
    new_endowment_path, class: 'btn btn-primary'
  ) if can? :create, Endowment %>
</div>
