<h2><%= t('view.interventions.new_title') %></h2>
<%= simple_form_for @intervention, defaults: { input_html: { class: 'span10' } } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class='row-fluid'>
      <div class='span8'>
        <div class='row-fluid'>
          <div class='span4'>
            <%= f.input :number, input_html: { 
              readonly: true, value: intervention_next_number_for_form
            } %>
          </div>
          <div class='span4'>
            <%= f.label :receptor_id %>
            <%= f.input :receptor_name, label: false, input_html: {
              value: current_user, disabled: true
            } %>
            <%= f.input :receptor_id, as: :hidden, input_html: {
              value: current_user.id
            } %>
          </div>
          <div class='span4'>
            <%= f.input :hierarchy_name, input_html: {
              value: current_user.hierarchy, disabled: true
            } %>
          </div>
        </div>
        <%= f.input :address %>
        <%= f.input :near_corner %>
        <%= f.input :kind_notes %>
      </div>
      <div class='span4'>
        <%= kind_collection_for_intervention(f) %>
      </div>
    </div>
    <% if f.object.informer.blank? && f.object.sco_id %>
      <h3><%= Intervention.human_attribute_name 'sco_id' %></h3>
      <%= link_to_current_sco %>
    <% else %>
      <div class='row-fluid'>
        <div class='page-header'>
          <div class='row-fluid'>
            <div class='span6'>
              <h3><%= t('view.interventions.informer_title') %></h3>
            </div>
            <div class='span3 pull-right'>
              <h5><%= raw(
                "(#{t('view.interventions.current_sco')}: #{link_to_current_sco})"
              ) if f.object.informer.present? %></h5>
              <%= f.input :sco_id, as: :hidden, input_html: { value: current_sco.id } %>
            </div>
          </div>
        </div>
        <%= f.simple_fields_for :informer do |inf| %>
          <%= render partial: 'informer', locals: { inf: inf }  %>
        <% end %>
      </div>
    <% end %>
    <div class='row-fluid'>
      <div class='page-header'>
        <h3><%= t('view.interventions.output_title') %></h3>
      </div>
      <div class='span5'>
        <div class='row-fluid'>
          <%= render partial: 'truck_output', locals: { f: f } %>
        </div>
      </div>
      <div class='span7'>
      </div>
    </div>
    <div class='row-fluid'>
      <div class='page-header'>
        <h3><%= Intervention.human_attribute_name :observations %></h3>
      </div>
      <%= f.input :observations, label: false, input_html: { class: 'span11', rows: 5 } %>
    </div>
  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
