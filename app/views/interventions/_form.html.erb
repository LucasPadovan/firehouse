<h2><%= t('view.interventions.new_title') %></h2>
<%= simple_form_for @intervention, defaults: { input_html: { class: 'span10' } } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class='row-fluid'>
      <div class='span8'>
        <div class='row-fluid'>
          <div class='span4'>
            <%= f.input :number, input_html: { 
              readonly: true, value: intervention_next_number_for_form
            } %>
          </div>
          <div class='span4'>
            <%= f.label :receptor_id %>
            <%= f.input :receptor_name, label: false, input_html: {
              value: current_user, disabled: true
            } %>
            <%= f.input :receptor_id, as: :hidden, input_html: {
              value: current_user.id
            } %>
          </div>
          <div class='span4'>
            <%= f.input :hierarchy_name, input_html: {
              value: current_user.hierarchy, disabled: true
            } %>
          </div>
        </div>
        <%= f.input :address %>
        <%= f.input :near_corner %>
        <%= f.input :kind_notes %>
      </div>
      <div class='span4'>
        <%= kind_collection_for_intervention(f) %>
      </div>
    </div>
    <div class='row-fluid'>
      <div class='span5'>
        <div class='row-fluid'>
          <div class='span2'>
            <%= f.label :truck_id %>
          </div>
          <div class='span6'>
            <%= f.input :auto_truck_number, label: false, input_html: {
              value: @intervention.truck, class: 'span11 autocomplete-field',
              data: {
                'autocomplete-id-target' => '#intervention_truck_id',
                'autocomplete-url' => autocomplete_for_truck_number_interventions_path(
                  format: :json
                )
              }
            } %>
            <%= f.input :truck_id, as: :hidden %>
          </div>
          <div class='span4'>
            <%= t('view.interventions.mileages') %>
          </div>
        </div>
        <div class='row-fluid'>
          <%= render partial: 'truck_output', locals: { f: f } %>
        </div>
      </div>
    </div>
    <div class='row-fluid'>
      <%= f.input :observations, input_html: { rows: 5 } %>
    </div>
  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
