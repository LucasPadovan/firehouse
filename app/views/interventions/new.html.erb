<%= content_for :form_actions do %>
  <%= link_to t('label.list'), interventions_path %>
<% end %>

<h2>
  <%= t('view.interventions.new_title') %>
  <div id="buttons-trigger" class="btn btn-mini"
       data-show-text="<%= t('view.interventions.buttons.show') %>"
       data-hide-text="<%= t('view.interventions.buttons.hide') %>">
    <%= t('view.interventions.buttons.hide') %>
  </div>
  <div class="alert-buttons closed" id="alert-buttons">
    <%= render 'interventions/alert_and_trap_buttons' %>
  </div>
</h2>

<% unless @intervention.errors.present? %>
  <div class="buttons open-buttons" id="quick-buttons">
    <div class="row">
      <% (1..5).each do |i| %>
        <%= render partial: 'interventions/button', locals: { i: i } %>
      <% end %>
    </div>
    <div class="row">
      <% (6..10).each do |i| %>
        <%= render partial: 'interventions/button', locals: { i: i } %>
      <% end %>
    </div>
  </div>
<% end %>

<%= render 'form' %>

<script type="text/javascript">
  $(document).ready(function(){
    QuickButtons.init();
  })
</script>
