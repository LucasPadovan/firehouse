<%= content_for :form_actions do %>
  <%= link_to t('label.list'), interventions_path %>
<% end %>

<h2>
  <%= t('view.interventions.new_title', number: intervention_next_number_for_form) %>
  <div id="show-quick-buttons" class="btn btn-mini"
       data-show-text="<%= t('view.interventions.quick_buttons.show') %>"
       data-hide-text="<%= t('view.interventions.quick_buttons.hide') %>">
    <%= t('view.interventions.quick_buttons.hide') %>
  </div>
</h2>

<% unless @intervention.errors.present? %>
  <div class="quick-button-div open-buttons" id="quick-button-div">
    <div class="row">
      <% (1..5).each do |i| %>
        <%= render partial: 'interventions/quick_button_row', locals: { i: i } %>
      <% end %>
    </div>
    <div class="row">
      <% (6..10).each do |i| %>
        <%= render partial: 'interventions/quick_button_row', locals: { i: i } %>
      <% end %>
    </div>
  </div>
<% end %>

<%= render 'form' %>

<script type="text/javascript">
  apply_quick_button_functions();
</script>
