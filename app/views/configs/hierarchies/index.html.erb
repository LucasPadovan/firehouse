<%= configs_subnav %>
<% if @hierarchies.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list table-hover">
        <thead>
          <tr>
            <th><%= Hierarchy.human_attribute_name 'name' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody id="hierarchies_table_body">
          <%= render @hierarchies %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@hierarchies) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.hierarchies.new', default: :'label.new'),
    new_configs_hierarchy_path, class: 'btn btn-primary', remote: true, data: {
    target: 'modal', modal: true } ) if can? :create, Hierarchy %>
</div>
