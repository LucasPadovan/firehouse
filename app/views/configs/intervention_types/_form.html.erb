<div class="control-group">
  <label class="control-label"><%= InterventionType.human_attribute_name :name %></label>
  <div class="controls">
    <%= f.text_field :name, autofocus: true, placeholder: InterventionType.human_attribute_name(:name) %>
    <span class="red"><%= errors_for @intervention_type, :name %></span>
  </div>
</div>
<div class="control-group">
  <label class="control-label"><%= InterventionType.human_attribute_name :priority %></label>
  <div class="controls">
    <%= f.number_field :priority %>
  </div>
</div>
<div class="control-group">
  <label class="control-label"><%= InterventionType.human_attribute_name :image %></label>
  <div class="controls">
    <%= f.text_field :image, placeholder: InterventionType.human_attribute_name(:image) %>
  </div>
</div>
<div class="control-group">
  <label class="control-label"><%= InterventionType.human_attribute_name :image %></label>
  <div class="controls">
    <%= f.text_field :color, placeholder: InterventionType.human_attribute_name(:color) %>
    <span class="red"><%= errors_for @intervention_type, :color %></span>
  </div>
</div>
