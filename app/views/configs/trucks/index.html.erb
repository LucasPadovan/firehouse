<%= configs_subnav %>
<% if @trucks.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list table-hover">
        <thead>
          <tr>
            <th><%= Truck.human_attribute_name 'number' %></th>
            <th><%= Truck.human_attribute_name 'mileage' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody id="trucks_table_body">
          <%= render @trucks %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@trucks) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.trucks.new', default: :'label.new'),
    new_configs_truck_path, class: 'btn btn-primary', remote: true, data: {
    target: 'modal', modal: true } ) if can? :create, Truck %>
</div>
