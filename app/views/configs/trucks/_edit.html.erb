<div class="modal">
  <%= simple_form_for([:configs, @truck], remote: true, html: { data: {
      target: dom_id(@truck), error: 'modal', modal: true, replace: true }
  }) do |f| %>
    <div class="modal-header">
      <h3><%= t('view.trucks.edit_title') %></h3>
    </div>
    <div class="modal-body">
      <%= render partial: 'form', locals: { f: f } %>
    </div>
    <div class="modal-footer">
      <%= yield :form_actions %>
      <%= f.submit t('label.save'), class: 'btn btn-primary',
                   disable_with: t('label.saving') %>
    </div>
  <% end %>
</div>
