<div class="hidden-phone">
  &nbsp;
</div>
<div class="row-fluid">
  <div class="public_form_container">
    <h3><%= t('view.login.title') %></h3>

    <div class="row-fuild">
      <div class="span12">
        <%= simple_form_for(resource, as: resource_name, url:
            session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, input_html: { autofocus: true, class: 'span12' } %>
            <%= f.input :password, input_html: { class: 'span12' } %>
            <%= f.input :remember_me, as: :boolean, wrapper: :checkbox if
                    devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <div class="span2">
              <%= render partial: 'shared/hidden_submit', locals: { f: f } %>
              <%= show_button_dropdown(
                      link_to('Ingresar', '#', class: 'btn btn-primary submit'),
                      devise_links_es
                  ) %>
            </div>
            <% if devise_mapping.recoverable? %>
              <div class="span8 offset2">
                <p>
                  <strong><%= t('view.login.help') %></strong>:
                  <%= link_to( t('view.login.forgot_pass'), new_password_path(
                      resource_name), id: 'reset-password') %>
                </p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
