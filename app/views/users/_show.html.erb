<div class="modal">
  <div class="modal-header readonly-data">
    <h3><%= @user %></h3>
  </div>
  <div class="modal-body readonly-data">
    <p>
      <%= mail_to @user.email %>
    </p>

    <p>
      <%= User.human_attribute_name 'hierarchy_id' %>:
      <strong><%= @user.hierarchy %></strong>
    </p>

    <% if @user.role %>
      <p>
        <%= User.human_attribute_name 'roles', count: 1 %>:
        <strong><%= t("view.users.roles.#{@user.role}") %></strong>
      </p>
    <% end %>
  </div>
  <div class="modal-footer">
    <%= link_to_function t('label.close'), "$('#modal').modal('toggle');",
                         class: 'btn' %>
  </div>
</div>
