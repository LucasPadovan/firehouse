<div class="modal">
  <%= simple_form_for(@user, remote: true, html: { data: {
      target: 'users_table_body', error: 'modal', modal: true } }) do |f| %>
    <div class="modal-header">
      <h3><%= t('view.users.new_title') %></h3>
    </div>
    <div class="modal-body">
      <%= render partial: 'form', locals: { f: f } %>
    </div>
    <div class="modal-footer">
      <%= yield :form_actions %>
      <%= f.submit t('label.save'), class: 'btn btn-primary',
                   disable_with: t('label.saving') %>
    </div>
  <% end %>
</div>
