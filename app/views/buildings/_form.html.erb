<div class="form-inputs clearfix">
  <div class='row-fluid'>
    <%= f.input :address,     input_html: { class: 'span11' } %>
    <%= f.input :description, input_html: { class: 'span11', rows: 3 } %>
  </div>
  <div class="row-fluid page-header">
    <h4><%= t 'view.buildings.damages_title' %></h4>
  </div>
  <div class="row-fluid">
    <div class="span6">
      <%= f.input :affected_surface, input_html: { class: 'span11' },
                  collection: Building::AFFECTED_AREAS_FOR_COLLECTION %>
      <%= f.input :affected_surface, input_html: { class: 'span11' },
                  label: t('view.buildings.collections.affected_areas.other') %>
      <%= f.input :details,          input_html: { class: 'span11' } %>
      <%= f.input :building_type,    input_html: { class: 'span11' },
                  collection: Building::BUILDING_TYPES_FOR_COLLECTION %>
      <%= f.input :building_type,    input_html: { class: 'span11' },
                  label: t('view.buildings.collections.building_types.other') %>
      <%= f.input :number_of_floors, input_html: { class: 'span11' } %>
      <%= f.input :number_of_rooms,  input_html: { class: 'span11' } %>
      <%= f.input :floor,            input_html: { class: 'span11' } %>
    </div>
    <div class="span5">
      <%= f.input :roof_type,        input_html: { class: 'span11' },
                  collection: Building::ROOF_TYPES_FOR_COLLECTION %>
      <%= f.input :roof_type,        input_html: { class: 'span11' },
                  label: t('view.buildings.collections.roof_types.other') %>
      <%= f.input :window_type,      input_html: { class: 'span11' },
                  collection: Building::WINDOW_TYPES_FOR_COLLECTION %>
      <%= f.input :window_type,      input_html: { class: 'span11' },
                  label: t('view.buildings.collections.window_types.other') %>
      <%= f.input :automatic_alert,  input_html: { class: 'span11' },
                  collection: Building::TERNARY_OPTIONS_FOR_COLLECTION,
                  selected: Building::TERNARY_OPTIONS_FOR_COLLECTION.last %>
      <%= f.input :extinguishers,    input_html: { class: 'span11' },
                  collection: Building::TERNARY_OPTIONS_FOR_COLLECTION,
                  selected: Building::TERNARY_OPTIONS_FOR_COLLECTION.last %>
      <%= f.input :fire_hydrants,    input_html: { class: 'span11' },
                  collection: Building::TERNARY_OPTIONS_FOR_COLLECTION,
                  selected: Building::TERNARY_OPTIONS_FOR_COLLECTION.last %>
    </div>
  </div>
</div>
