<div class="modal">
  <%= simple_form_for( [@intervention, @endowment, 'mobile_intervention', @building],
      remote: true, html: { data: { target: dom_id(@building), error: 'modal',
      modal: true, replace: true, callback: "highlightItem('edit_building',
      'buildings_list', #{dom_id(@building)})" } } ) do |f| %>
    <div class="modal-header">
      <h2><%= @title %></h2>
    </div>
    <div class="modal-body">
      <%= render partial: 'form', locals: {f: f} %>
    </div>
    <div class="modal-footer">
      <%= link_to_function t('label.close'), "$('#modal').modal('toggle');",
                           class: 'btn' %>
      <%= f.button :submit, t('view.buildings.edit'), class: 'btn-primary' %>
    </div>
  <% end %>
</div>
