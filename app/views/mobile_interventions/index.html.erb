<% if @mobile_interventions.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= MobileIntervention.human_attribute_name 'date' %></th>
            <th><%= MobileIntervention.human_attribute_name 'emergency' %></th>
            <th><%= MobileIntervention.human_attribute_name 'observations' %></th>
            <th><%= MobileIntervention.human_attribute_name 'intervention_id' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @mobile_interventions.each do |mobile_intervention| %>
            <tr>
              <td><%= mobile_intervention.date %></td>
              <td><%= mobile_intervention.emergency %></td>
              <td><%= mobile_intervention.observations %></td>
              <td><%= mobile_intervention.intervention_id %></td>
              <td><%= link_to_show mobile_intervention %></td>
              <td><%= link_to_edit edit_mobile_intervention_path(mobile_intervention) if can? :update, mobile_intervention %></td>
              <td><%= link_to_destroy mobile_intervention if can? :destroy, mobile_intervention %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@mobile_interventions) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.mobile_interventions.new', default: :'label.new'),
    new_mobile_intervention_path, class: 'btn btn-primary'
  ) if can? :create, MobileIntervention %>
</div>
