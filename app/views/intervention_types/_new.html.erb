<div class="modal">
  <div class="modal-header">
  </div>
  <div class="modal-body">
    <%= form_for @intervention_type, url: intervention_types_path(
        father: params[:father] ), remote: true, html: { data: { target: 'modal',
        error: 'modal', modal: true } } do |f| %>
      <%= render partial: 'form', locals: {f: f} %>
  <% end %>
  </div>
  <div class="modal-footer">
    <%= content_for :form_actions do %>
        <%= link_to t('label.list'), intervention_types_path %>
    <% end %>
  </div>
</div>
