<div class="modal">
  <%= form_for @intervention_type, url: intervention_types_path(
      father: params[:father] ), remote: true, html: { data: { target: (
      params[:father] ? "intervention_type_#{params[:father]}_children" :
      'new_intervention_type'),  error: 'modal', modal: true  }, class: 'form-modal' } do |f| %>
    <div class="modal-header">
      <h2>Nuevo tipo de intervenci√≥n</h2>
    </div>
    <div class="modal-body">
      <%= render partial: 'form', locals: {f: f} %>
    </div>
    <div class="modal-footer">
      <%= link_to_function t('app.close'), "$('#modal').modal('toggle');", class: 'btn' %>
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
