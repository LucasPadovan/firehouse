<ol id="markers-data" class="markers-list <%= 'hide' unless interventions_list %>">
  <% @interventions.each_with_index do |intervention, index| %>
    <li
      data-marker-address="<%= intervention.popup_description(index) %>"
      data-marker-latitude="<%= intervention.latitude %>"
      data-marker-longitude="<%= intervention.longitude %>"
    >
      <% if interventions_list %>
        <%= intervention.formatted_description %>
      <% end %>
    </li>
  <% end %>
</ol>
